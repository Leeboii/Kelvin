local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Kelvin 1.0", HidePremium = false, SaveConfig = true, ConfigFolder = "KOrionTest"})

local Tab = Window:MakeTab({
	Name = "LocalPlayer",
	PremiumOnly = false
})

Tab:AddSlider({
	Name = "Slider",
	Min = 16,
	Max = 1715,
	Default = 5,
	Color = Color3.fromRGB(255,255,255),
	Increment = 1,
	ValueName = "bananas",
	Callback = function(Value)
		localplayer.Character.Humanoid.walkspeed
	end    
})

local Tab = Window:MakeTab({
	Name = "Script Hub",
	PremiumOnly = false
})

Tab:AddButton({
	Name = "DarkHub",
	Callback = function()
      		loadstring(game:HttpGet("https://raw.githubusercontent.com/RandomAdamYT/DarkHub/master/Init", true))()
  	end    
})

OrionLib:MakeNotification({
	Name = "Hello!",
	Content = "Welcome to Kelvin 1.0!",
	Time = 5
})

OrionLib:Init()

Tab1:AddToggle({
    Name = "Toggle",
    Default = true,
    Save = true,
    Flag = "toggle"
})

print(OrionLib.Flags["toggle"].Value) -- prints the value of the toggle.
